@using FinalProject.Models;
@model List<Product>
@{
    ViewBag.Title = "GetProductById";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="products">
    <div class="ourProducts">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="product card" style="width: 18rem;">
                        <div class="imgDiv">
                            <img src="@Url.Content(item.Image)" class="card-img-top" alt="...">
                        </div>
                        <div class="card-body">
                            <h3 class="card-title user">@item.User.Name</h3>
                            <h3 class="card-title prod">@item.Name</h3>
                            <span><i class="fa fa-heart"></i></span>
                            <div class="salary">@item.Price LE</div></span>
                            <button class="btn btn-default" onclick="OpenModelDetails(@item.Id);">More Details</button>

                        </div>
                    </div>
                </div>
            }

            </div>
        </div>

    </section>


