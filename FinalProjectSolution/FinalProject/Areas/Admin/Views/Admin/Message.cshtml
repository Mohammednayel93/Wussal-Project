@model FinalProject.Areas.Admin.ViewModel.Message
<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Send Message</h5>
    <button type="button" style=" margin-top: -22px;" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <form>
        <div class="form-group">
            <label for="recipient-name" class="col-form-label">Email:</label>
            @{
                var Email = (ViewBag.UserObject as FinalProject.Models.User).Email;
                var Name = (ViewBag.UserObject as FinalProject.Models.User).Name;
            }
            <input type="text" value='@Email' id="txt_Email" readonly class="form-control">
            <input type="hidden" value='@Name' id="txt_hiddenName" readonly class="form-control">

        </div>
        <div class="form-group">
            <label for="recipient-name" class="col-form-label">Subject:</label>
            <input type="text" class="form-control" id="Subject">
            @*@Html.TextBoxFor(m => m.Subject, new { @class = "form-control" })*@
            @*@Html.ValidationMessageFor(m => m.Subject)*@

        </div>
        <div class="form-group">
            <label for="message-text" class="col-form-label">Message:</label>
            @*@Html.TextAreaFor(m => m.MessageContent, new { @class = "form-control" })*@
            @*@Html.ValidationMessageFor(m => m.MessageContent)*@

            <textarea class="form-control" id="MessageContent"></textarea>
        </div>
        <div class="form-group text-right">
            <input type="button" value="Send" onclick="sendMail();" id="send" class="btn btn-success" />
        </div>
    </form>
</div>

@Scripts.Render("~/bundles/jqueryval")

