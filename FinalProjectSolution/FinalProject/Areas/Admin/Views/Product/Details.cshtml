@model FinalProject.Models.Product
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-6 imgProd">
            <img src="@Url.Content(Model.Image)" alt="..." height="222" width="400" />
        </div>
        <div class="col-6 prodDetail">
            <img src="@Url.Content(Model.User.Image)" class="rounded-circle" alt="" width="70">
            <h3>@Model.User.Name<span>@Model.User.Phone</span></h3>
            <h2>@Model.Name</h2>
            @if (Model.IsFree == true)
            {
                <span class="sal">For Free</span>
            }
            else if (Model.IsRent == true)
            {
                <span class="sal">@Model.Price</span>
                <span class="sal">For Rent</span>
            }
            else if (Model.IsSell == true)
            {
                <span class="sal">@Model.Price</span>
                <span class="sal">For Sell</span>
            }
            else
            {
                <span class="sal">For Exchange</span>
            }

            <p>
                @Model.Description
            </p>
            @{
                var Count = Model.Comments.Count;
                var Likes = Model.Likes.Count;
            }
            <span class="likes"><a href="#">@Likes likes</a></span> -
            <span class="comments"><a href="#"> @Count Comments</a></span>
        </div>
        @*<button class="btn btn-default">see more</button>*@
        @*@Html.ActionLink("See More", "ProductDetails", "Product", new { id = Model.Id }, new { @class = "btn btn-default" })*@
    </div>
</div>
